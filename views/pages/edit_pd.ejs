        $('#datepicker').datepicker({
            uiLibrary: 'bootstrap4'
        });
    </script>
     
   </div>
    <a name="" id="" class="btn btn-secondary" href="/product_list" role="button">Cancel</a>
    <button type="submit" class="btn btn-primary">Save</button>
    <a name="" id="" class="btn btn-danger"  href="complete_del_pd/<%= results[0].id %>" role="button">Delete</a>
    </form>
  

