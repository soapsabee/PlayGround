<% include ../partials/header.ejs %>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/gijgo@1.9.10/js/gijgo.min.js" type="text/javascript"></script>
<link href="https://cdn.jsdelivr.net/npm/gijgo@1.9.10/css/gijgo.min.css" rel="stylesheet" type="text/css" />
<div class="container">
    <br>
    <br>
    <form action="/product_list/save" method="post">
   <div class="form-group" style="">
     <label for="ID">ID</label>
     <input type="text" class="form-control" style="width:500px;" name="id" id="id" aria-describedby="helpId" value="<%= results[0].id %>" readonly="true">
     <label for="ID">Title</label>
     <input type="text" class="form-control" style="width:500px;" name="title" id="title" aria-describedby="helpId" value="<%= results[0].title %>">
     <label for="ID">Price</label>
     <input type="text" class="form-control" style="width:500px;" name="price" id="price" aria-describedby="helpId" value="<%= results[0].price %>">
     <label for="date">Create At</label>
     <br>
     
    
     <input id="datepicker" name="create_at" width="276" value="<%= results[0].create_at %>" />
    <script>
        $('#datepicker').datepicker({
            uiLibrary: 'bootstrap4'
        });
    </script>
     
   </div>
    <a name="" id="" class="btn btn-secondary" href="/product_list" role="button">Cancel</a>
    <button type="submit" class="btn btn-primary">Save</button>
    <a name="" id="" class="btn btn-danger" role="button" data-toggle="modal" data-target="#BoxSave">Delete</a>
    </form>
  

    </div>

<!-- Modal -->
<div class="modal fade" id="BoxSave" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">ยืนยันการลบ</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

            คุณต้องการที่จะลบสินค้าชิ้นนี้ใช่หรือไม่

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">ไม่</button>
        <a name="" id="" class="btn btn-danger" role="button" href="complete_del_pd/<%= results[0].id %>">ใช่</button>
      </div>
    </div>
  </div>
</div>


