<% include ../partials/header.ejs %>

<div class="container">
  <div class="row">
    <div
      class="col-12"
      style="border-radius: 10px;  margin-top:20px; background-color: white; box-shadow: 5px 10px rgb(112, 105, 105);"
    >
      <h1 class="my-4" style="font-family:pixel;color:rgb(112, 105, 105);">
        Search
      </h1>
      <div class="list-group">
        <div class="row">
          <div class="col-2" style="color:black; margin-left:100px; ">
            <a href="/appnews">HOT APPS</a>
          </div>
          <div class="col-2" style="color:black;">
            <a href="/appMostlyInst">MOST DOWNLOAD</a>
          </div>
          <div class="col-2" style="color:black;">
            <a href="/appnews">TOP10 REVIEWED</a>
          </div>
          <div class="col-2" style="color:black;">
            <a href="/appby_type/Free">FREE APPS</a>
          </div>
          <div class="col-2" style="color:black;">
            <a href="/appby_type/Paid">PAY APPS</a>
          </div>
        </div>
        <form action="/appby_rate" method="GET">
          <div class="new">
            <select class="star" name="rate">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
            <button class="btn btn-success btn-md">Search</button>
          </div>
        </form>
        <div style="margin-top:10px;">
          <input type="text" class="js-range-slider" name="my_range" value="" />
        </div>
        <button
          id="test-btn"
          class="btn btn-success btn-block"
          style="margin-top:10px;"
        >
          Search
        </button>
        <br /><br />
      </div>
      <br />
    </div>

    <div class="loadMore row">
      <% posts.forEach(function(r) { %>
      <div class="item col-lg-3 col-md-3 mb-3" style="margin-top:20px;">
        <div class="item card h-100">
          <a href="/review_app/<%= r.app %>/<%= r.category %>"
            ><img class="card-img-top" src="./pic/android_APK_ico.gif" alt=""
          /></a>
          <div class="item card-body">
            <h4 class="card-title">
              <a
                href="/review_app/<%= r.app %>/<%= r.category %>"
                style="color:black;"
              >
                <%= r.app %>
              </a>
            </h4>
            <div class="card-text">หมวดหมู่: <%= r.genres %></div>
          </div>
          <div class="item card-footer">
            <select class="starnormal" name="rate">
              <% if(r.rating >=1 && r.rating < 2 ) { %>
              <option value="1" selected>1</option>
              <% }else { %>
              <option value="1"> >1</option>
              <% }%> <% if(r.rating >=2 && r.rating < 3 ) { %>
              <option value="2" selected>2</option>
              <% }else { %>
              <option value="2">2</option>
              <% }%> <% if(r.rating >=3 && r.rating < 4){ %>
              <option value="3" selected>3</option>
              <% }else { %>
              <option value="3">3</option>
              <% }%> <% if(r.rating >=4 && r.rating < 5){ %>
              <option value="4" selected>4</option>
              <% }else { %>
              <option value="4">4</option>
              <% }%> <% if(r.rating ===5){ %>
              <option value="5" selected>5</option>
              <% }else { %>
              <option value="5">5</option>
              <% }%>
            </select>
          </div>
        </div>
      </div>

      <% }); %>
    </div>
  </div>

  <% include ../partials/footer.ejs %>
</div>
